# OpenAI API Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here

# JWT Security (generate strong random secrets)
JWT_SECRET=your_jwt_access_token_secret_here_generate_random_64_chars
JWT_REFRESH_SECRET=your_jwt_refresh_token_secret_here_generate_random_64_chars

# YooKassa Payment Configuration
YOOKASSA_SHOP_ID=your_yookassa_shop_id_here
YOOKASSA_SECRET_KEY=your_yookassa_secret_key_here
YOOKASSA_RETURN_URL=https://cook.windexs.ru/payment-success

# SMTP Email Configuration
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_username_here
SMTP_PASS=your_smtp_password_here

# Server Configuration
PORT=1041
NODE_ENV=production

# Optional: Frontend URL for CORS
FRONTEND_URL=https://cook.windexs.ru

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual secrets
# 3. Generate strong random secrets for JWT tokens (at least 64 characters)
# 4. Never commit the .env file to version control
# 5. Use different secrets for JWT_SECRET and JWT_REFRESH_SECRET
